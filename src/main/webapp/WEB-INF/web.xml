<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
          
    <servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>pack.customer.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
         
         
   <servlet>
		<servlet-name>customerinsert</servlet-name>
		<servlet-class>pack.customer.Customerinsert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>customerinsert</servlet-name>
		<url-pattern>/CreateAccount</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>customerupdate</servlet-name>
		<servlet-class>pack.customer.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>customerupdate</servlet-name>
		<url-pattern>/AccountUpdate</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deleteAccount</servlet-name>
		<servlet-class>pack.customer.DeleteAccountServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteAccount</servlet-name>
		<url-pattern>/deleteAccount</url-pattern>
	</servlet-mapping>
         
 </web-app>
         